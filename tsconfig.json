{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strict": true,
    "rootDir": "src",
    "noEmit": true,
    "skipLibCheck": true
  }
}
